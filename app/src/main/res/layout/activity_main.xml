<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#4FC3F7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:contentDescription="uma bomba de gasolina ilustrando o app"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/edTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:layout_marginBottom="10dp"
            android:text="Gas or Alcohol?"
            android:textAlignment="center"
            android:textColor="#4FC3F7"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edGas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:layout_marginBottom="20px"
            android:backgroundTint="#4FC2F6"
            android:hint="Enter with gas price"
            android:inputType="numberDecimal"
            android:outlineAmbientShadowColor="#4FC3F7"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#CA584C"
            android:textColor="#4FC2F6"
            android:textColorHint="#4FC2F6" />

        <EditText
            android:id="@+id/edAlcohol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:backgroundTint="#4FC2F6"
            android:ems="10"
            android:hint="Enter with alcohol price"
            android:inputType="numberDecimal"
            android:outlineAmbientShadowColor="#4FC3F7"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#CA584C"
            android:textColorHint="#4FC2F6" />

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="31dp"
            android:layout_marginLeft="60px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10px"
                android:layout_marginVertical="10px"
                android:layout_weight="1"
                android:text="Chose the factor"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/swPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginVertical="20px"
                android:text="75%"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <TextView
            android:id="@+id/edResult"
            android:layout_width="306dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60px"
            android:layout_marginTop="30px"
            android:textAlignment="textStart"
            android:textColor="#4FC2F6"
            android:textColorHint="#4FC2F6"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#CB584C"
            android:text="Calcular" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>