<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:background="@drawable/rounded_layout"
        style="@style/FORM"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:contentDescription="uma bomba de gasolina ilustrando o app"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/icon" />

        <TextView
            android:id="@+id/edTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:layout_marginBottom="10dp"
            android:text="Gas or Alcohol?"
            android:textAlignment="center"
            android:textSize="34sp"
            style="@style/TITLE"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edGas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:layout_marginBottom="20px"
            style="@style/INPUT"
            android:hint="Enter with gas price"
            android:inputType="numberDecimal"
            android:outlineProvider="bounds" />

        <EditText
            android:id="@+id/edAlcohol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            style="@style/INPUT"
            android:ems="10"
            android:hint="Enter with alcohol price"
            android:inputType="numberDecimal"
            android:outlineProvider="bounds" />

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="31dp"
            android:layout_marginLeft="60px"
            android:layout_marginTop="20px"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10px"
                android:layout_marginVertical="10px"
                android:layout_weight="1"
                android:text="Chose the factor"
                style="@style/SWITCH" />

            <Switch
                android:id="@+id/swPercent"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:backgroundTint="#000000"
                android:text="75%"
                android:textColorHighlight="#80FDA300"
                android:textColorLink="#FDA300"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            style="@style/BUTTON"
            android:text="Calcular" />

        <TextView
            android:id="@+id/edResult"
            android:layout_width="306dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60px"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            style="@style/RESPONSE"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>