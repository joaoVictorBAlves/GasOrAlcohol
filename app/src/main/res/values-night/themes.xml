<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#001E45</item>
    </style>

    <style name="FORM">
        <item name="android:backgroundTint">#001E45</item>
        <item name="colorSecondary">#FFF</item>
    </style>

    <style name="TITLE">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="INPUT">
        <item name="android:color">#AAAAAA</item>
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SWITCH">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">#004FB2</item>
        <item name="android:textColorLink">#004FB2</item>
    </style>

    <style name="BUTTON">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#004FB2</item>
    </style>

    <style name="RESPONSE">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>